{
  "name": "thymeleaf-i18n-helper",
  "displayName": "Thymeleaf i18n helper",
  "description": "To help manage thymeleaf i18n messages and translations",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onStartupFinished",
    "workspaceContains:**/*.properties"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
        "type": "object",
        "properties": {
            "thymeleaf-i18n-helper.exclude": {
                "type": "array",
                "default": ["application.properties"],
                "items": {
                    "type": "string"
                }
            },
            "thymeleaf-i18n-helper.folder": {
                "type": "string",
                "default": ""
            }
        }
    },
    "commands": [
        {
            "command": "thymeleaf-i18n-helper.processSelection",
            "title": "Add to i18n messages"
        }
    ],
    "menus": {
        "editor/context": [
            {
                "command": "thymeleaf-i18n-helper.processSelection",
                "group": "navigation"
            }
        ]
    }
      
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.2.3"
  }
}
